// General
{
	"tab_size": 2,
	"file_tab_style": "square",
	"scroll_speed": 0,
	"highlight_modified_tabs": true,
	"show_tab_close_buttons": false,
	"mini_diff": false,
	"ruler_style": "solid",
	"highlight_line": true,
	"block_caret": false,
	"ensure_newline_at_eof_on_save": true,
	"auto_complete": false,
	"trim_trailing_white_space_on_save": "all",
	"hot_exit": "disabled",
	"scroll_context_lines": 5,
	"drag_text": false,
	"show_encoding": true,
	"show_line_endings": true,
	"show_indentation": true,
	"show_syntax": true,
	"hide_new_tab_button": true,
	"hide_tab_scrolling_buttons": true,
	"show_sidebar_button": false,
	"hardware_acceleration": "opengl",
	"open_tabs_after_current": false,
	"tab_completion": false,
	"reveal_tabs_with_timeout": true,
}

// Syntax-specific
// (.txt)
{
	"ensure_newline_at_eof_on_save": false,
}


// Keybindings
[
	{ "keys": ["ctrl+\\"], "command": "toggle_status_bar" },
	{ "keys": ["ctrl+tab"], "command": "toggle_tabs" },
	{ "keys": ["alt"], "command": "toggle_menu" },
]
